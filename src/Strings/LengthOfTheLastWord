package Strings;

public class LengthOfLastWord {
    public int lengthOfLastWord(String s) {
        int count = 0;
        char[] a = s.toCharArray();
        for(int i = a.length-1 ; i >=0 ;i--){
            if(a[i] != ' '){
               count++;
                if (i!= 0 && a[i-1] == ' ') {
                    return count;
               }
            }
        }
        return count; 
    }
}
